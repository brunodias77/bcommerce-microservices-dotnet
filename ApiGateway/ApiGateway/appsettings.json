{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "client-service": {
        "ClusterId": "client-service-cluster",
        "Match": {
          "Path": "/api/client/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "client-service-public": {
        "ClusterId": "client-service-cluster",
        "Match": {
          "Path": "/api/client/create-user",
          "Methods": ["POST"]
        }
      },
      "client-service-login": {
        "ClusterId": "client-service-cluster",
        "Match": {
          "Path": "/api/client/login",
          "Methods": ["POST"]
        }
      },
      "client-service-health": {
        "ClusterId": "client-service-cluster",
        "Match": {
          "Path": "/api/client/health-check",
          "Methods": ["GET"]
        }
      },
      "client-service-ping": {
        "ClusterId": "client-service-cluster",
        "Match": {
          "Path": "/api/client/ping",
          "Methods": ["GET"]
        }
      }
    },
    "Clusters": {
      "client-service-cluster": {
        "Destinations": {
          "client-service": {
            "Address": "http://localhost:5122"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  },
  "Keycloak": {
    "Authority": "http://keycloak:8080/realms/b-commerce-realm",
    "Audience": "b-commerce-backend",
    "RequireHttpsMetadata": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:3000"
    ]
  }
}
