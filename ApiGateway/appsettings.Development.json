{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug",
      "System.Net.Http.HttpClient": "Information"
    }
  },
  "ServiceDiscovery": {
    "RefreshInterval": "00:00:30",
    "HealthCheckInterval": "00:00:15"
  },
  "ReverseProxy": {
    "Clusters": {
      "client-service-cluster": {
        "HttpRequest": {
          "Timeout": "00:05:00"
        }
      },
      "catalog-service-cluster": {
        "HttpRequest": {
          "Timeout": "00:05:00"
        }
      },
      "cart-service-cluster": {
        "HttpRequest": {
          "Timeout": "00:05:00"
        }
      },
      "sales-service-cluster": {
        "HttpRequest": {
          "Timeout": "00:05:00"
        }
      }
    }
  }
}
